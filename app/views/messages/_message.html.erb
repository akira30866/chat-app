<div class="chat-box">
  <div class="chat-content">
    <div class ="chat-name">
      <%= message.user.name %>
    </div>
    <div class="chat-time">
      <%= l message.created_at %>
    </div>
  </div>
  <div class="chat-messages">
    <%= message.content %>
  </div>
  <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image' if message.image.attached? %>
</div>